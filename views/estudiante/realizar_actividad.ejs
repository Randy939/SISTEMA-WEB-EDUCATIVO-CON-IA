<!DOCTYPE html>
<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Realizar Actividad: <%= actividad.titulo %></title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#4396ea",
              "background-light": "#f6f7f8",
              "background-dark": "#111921",
            },
            fontFamily: {
              display: ["Inter", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.25rem",
              lg: "0.5rem",
              xl: "0.75rem",

              full: "9999px",
            },
          },
        },
      };
    </script>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body
    class="bg-background-light dark:bg-background-dark font-display text-[#0e141b] dark:text-slate-200 h-screen overflow-hidden"
  >
    <div class="flex h-full w-full">
      <%- include('../partials/siderbar_estudiante', { active: active, user:
      user }) %>

      <main class="flex-1 p-8 h-full overflow-y-auto">
        <div class="max-w-3xl mx-auto">
          <header class="mb-8">
            <a
              href="/actividades"
              class="flex items-center gap-1 text-sm text-primary hover:underline mb-2"
            >
              <span class="material-symbols-outlined">arrow_back</span>
              Volver a Mis Actividades
            </a>
            <p
              class="text-slate-900 dark:text-white text-4xl font-black leading-tight tracking-[-0.033em]"
            >
              <%= actividad.titulo %>
            </p>
            <div class="flex items-center gap-2 mt-2">
              <span class="text-xs font-medium text-blue-800 bg-blue-100..."
                ><%= actividad.tema %></span
              >
              <span class="text-xs font-medium text-amber-800 bg-amber-100..."
                ><%= actividad.dificultad %></span
              >
            </div>
          </header>

          <form action="/actividad/<%= actividad._id %>/enviar" method="POST">
            <div
              class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6 mb-8"
            >
              <h2
                class="text-2xl font-bold text-slate-800 dark:text-slate-200 mb-4"
              >
                Lectura
              </h2>
              <div
                class="prose dark:prose-invert max-w-none text-slate-700 dark:text-slate-300"
              >
                <%- actividad.descripcion.replace(/\n/g, '<br />') %>
              </div>
            </div>

            <div
              class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6"
            >
              <h2
                class="text-2xl font-bold text-slate-800 dark:text-slate-200 mb-6"
              >
                Preguntas de Comprensi√≥n
              </h2>
              <div class="space-y-8">
                <% if (!actividad.preguntas || actividad.preguntas.length === 0)
                { %>
                <p class="text-slate-500 text-center">
                  Esta actividad no tiene preguntas.
                </p>
                <% } %>

                <% actividad.preguntas.forEach((pregunta, index) => { %>
                <div class="border-t dark:border-slate-700 pt-6">
                  <p
                    class="font-semibold text-slate-800 dark:text-slate-200 mb-3"
                  >
                    Pregunta
                    <%= index + 1 %>:
                    <%= pregunta.preguntaTexto %>
                    (<%= pregunta.puntaje %>
                    pts)
                  </p>
                  <div class="space-y-3 pl-4">
                    <% pregunta.alternativas.forEach((alt, altIndex) => { %>
                    <label
                      for="resp_<%= pregunta._id %>_<%= alt._id %>"
                      class="flex items-center gap-3 cursor-pointer p-3 rounded-lg border border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800 has-[:checked]:bg-primary/10 has-[:checked]:border-primary dark:has-[:checked]:border-primary"
                    >
                      <input
                        type="radio"
                        id="resp_<%= pregunta._id %>_<%= alt._id %>"
                        name="respuestas[<%= pregunta._id %>]"
                        value="<%= alt._id %>"
                        class="form-radio text-primary focus:ring-primary h-5 w-5"
                        required
                      />
                      <span class="text-slate-700 dark:text-slate-300"
                        ><%= alt.texto %></span
                      >
                    </label>
                    <% }) %>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>

            <% if (actividad.preguntas && actividad.preguntas.length > 0) { %>
            <div class="mt-8 flex justify-end">
              <button
                type="submit"
                class="flex min-w-[120px] cursor-pointer items-center justify-center rounded-lg h-10 px-6 bg-primary text-white text-sm font-medium"
              >
                <span class="truncate">Terminar y Enviar Respuestas</span>
              </button>
            </div>
            <% } %>
          </form>
        </div>
      </main>
    </div>
  </body>
</html>
