<!DOCTYPE html>
<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Editar Actividad</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#4396ea",
              "background-light": "#f6f7f8",
              "background-dark": "#111921",
            },
            fontFamily: {
              display: ["Inter", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.25rem",
              lg: "0.5rem",
              xl: "0.75rem",
              full: "9999px",
            },
          },
        },
      };
    </script>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body
    class="bg-background-light dark:bg-background-dark font-display text-[#0e141b] dark:text-slate-200 h-screen overflow-hidden"
  >
    <div class="flex h-full w-full">
      <%- include('../partials/siderbar_profesor', { active: active, user: user }) %>

      <main class="flex-1 p-8 h-full overflow-y-auto">
        <div class="max-w-4xl mx-auto">
          <header class="mb-8">
            <a
              href="/profesor/actividades"
              class="inline-flex items-center gap-1.5 rounded-lg px-3 py-1.5 text-sm font-medium mb-2 bg-primary/20 dark:bg-primary/30 text-primary dark:text-blue-300 hover:bg-primary/30 dark:hover:bg-primary/40 transition-colors"
            >
              <span class="material-symbols-outlined text-lg">arrow_back</span>
              Volver a la lista
            </a>
            <h1 class="text-slate-900 dark:text-white text-4xl font-bold leading-tight">
              Editar Actividad
            </h1>
            <p class="text-slate-500 dark:text-slate-400 text-base font-normal mt-2">
              Modifica los detalles de la lectura o actualiza las preguntas.
            </p>
          </header>

          <form
            action="/profesor/actividades/editar/<%= actividad._id %>"
            method="POST"
            enctype="multipart/form-data"
            class="space-y-8"
          >
            <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
              <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4 border-b border-slate-200 dark:border-slate-700 pb-2">
                Detalles de la Lectura
              </h3>
              <div class="space-y-4 pt-2">
                <div>
                  <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="titulo">Título</label>
                  <input
                    class="w-full bg-slate-100 dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary"
                    id="titulo"
                    name="titulo"
                    type="text"
                    value="<%= actividad.titulo %>"
                    required
                  />
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="tema">Tema</label>
                    <input
                      class="w-full bg-slate-100 dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary"
                      id="tema"
                      name="tema"
                      type="text"
                      value="<%= actividad.tema %>"
                      required
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="dificultad">Dificultad</label>
                    <select
                      class="w-full bg-slate-100 dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary"
                      id="dificultad"
                      name="dificultad"
                      required
                    >
                      <option value="Fácil" <%= actividad.dificultad === 'Fácil' ? 'selected' : '' %>>Fácil</option>
                      <option value="Intermedio" <%= actividad.dificultad === 'Intermedio' ? 'selected' : '' %>>Intermedio</option>
                      <option value="Difícil" <%= actividad.dificultad === 'Difícil' ? 'selected' : '' %>>Difícil</option>
                    </select>
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="imagen">Cambiar Imagen (Opcional)</label>
                  <div class="flex items-center gap-4 mt-1">
                    <img
                      src="<%= actividad.imagenUrl %>"
                      alt="Portada actual"
                      class="w-16 h-16 rounded-lg object-cover border border-slate-200 dark:border-slate-700"
                    />
                    <input
                      class="w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary/10 file:text-primary hover:file:bg-primary/20 dark:file:bg-primary/20 dark:file:text-blue-300"
                      id="imagen"
                      name="imagen"
                      type="file"
                      accept="image/*"
                    />
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="descripcion">Texto de la Lectura</label>
                  <textarea
                    class="w-full bg-slate-100 dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary"
                    id="descripcion"
                    name="descripcion"
                    rows="10"
                    required
                  ><%= actividad.descripcion %></textarea>
                </div>
              </div>
            </div>

            <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
              <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4 border-b border-slate-200 dark:border-slate-700 pb-2">
                Preguntas de Comprensión
              </h3>

              <div id="preguntas-container" class="space-y-6 pt-2">
                <% actividad.preguntas.forEach((pregunta, pIndex) => { %>
                <div class="pregunta-bloque border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50 rounded-lg p-4 relative" data-index="<%= pIndex %>">
                  <button
                    type="button"
                    onclick="eliminarPregunta(this)"
                    class="absolute top-3 right-3 text-slate-400 hover:text-red-500 transition-colors"
                    title="Eliminar pregunta"
                  >
                    <span class="material-symbols-outlined">delete</span>
                  </button>

                  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
                    <div class="md:col-span-3">
                      <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="preguntas[<%= pIndex %>][preguntaTexto]">Texto de la Pregunta <%= pIndex + 1 %></label>
                      <input
                        class="w-full bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary"
                        name="preguntas[<%= pIndex %>][preguntaTexto]"
                        type="text"
                        value="<%= pregunta.preguntaTexto %>"
                        required
                      />
                    </div>
                    <div class="md:col-span-1">
                      <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="preguntas[<%= pIndex %>][puntaje]">Puntaje</label>
                      <input
                        class="w-full bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary"
                        name="preguntas[<%= pIndex %>][puntaje]"
                        type="number"
                        value="<%= pregunta.puntaje %>"
                        min="1"
                        required
                      />
                    </div>
                  </div>

                  <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Alternativas:</p>
                  <div class="alternativas-container space-y-2" data-pregunta-index="<%= pIndex %>">
                    <% pregunta.alternativas.forEach((alt, aIndex) => { %>
                    <div class="alternativa-item flex items-center gap-3">
                      <input
                        type="radio"
                        name="preguntas[<%= pIndex %>][correcta]"
                        value="<%= aIndex %>"
                        class="w-4 h-4 text-primary bg-slate-100 border-slate-300 focus:ring-primary dark:bg-slate-700 dark:border-slate-600"
                        <%= alt.esCorrecta ? 'checked' : '' %>
                        required
                      />
                      <input
                        type="text"
                        name="preguntas[<%= pIndex %>][alternativas][<%= aIndex %>][texto]"
                        placeholder="Texto alternativa"
                        class="flex-grow bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg text-sm focus:ring-primary focus:border-primary py-2 px-3"
                        value="<%= alt.texto %>"
                        required
                      />
                      <button
                        type="button"
                        onclick="eliminarAlternativa(this)"
                        class="text-slate-400 hover:text-red-500 transition-colors"
                      >
                        <span class="material-symbols-outlined text-lg">remove_circle_outline</span>
                      </button>
                    </div>
                    <% }) %>
                  </div>
                  <button
                    type="button"
                    onclick="agregarAlternativa(this)"
                    class="mt-3 inline-flex items-center gap-1 text-sm text-primary hover:text-blue-600 font-medium transition-colors"
                  >
                    <span class="material-symbols-outlined text-lg">add</span>
                    Añadir Alternativa
                  </button>
                </div>
                <% }) %>

                <% if (actividad.preguntas.length === 0) { %>
                <p class="text-slate-500 dark:text-slate-400 text-sm text-center py-6 border-2 border-dashed border-slate-200 dark:border-slate-700 rounded-lg">
                  Aún no has añadido preguntas a esta actividad.
                </p>
                <% } %>
              </div>

              <div class="mt-6 border-t border-slate-200 dark:border-slate-700 pt-4">
                <button
                  type="button"
                  onclick="agregarPregunta()"
                  class="flex items-center justify-center w-full py-3 border-2 border-dashed border-slate-300 dark:border-slate-600 rounded-xl text-slate-600 dark:text-slate-400 hover:border-primary hover:text-primary hover:bg-primary/5 transition-all font-medium"
                >
                  <span class="material-symbols-outlined mr-2">add_circle_outline</span>
                  Añadir Nueva Pregunta
                </button>
              </div>
            </div>

            <div class="flex justify-end gap-3 pt-4">
              <a
                href="/profesor/actividades"
                class="inline-flex min-w-[84px] items-center justify-center rounded-lg bg-slate-100 px-4 py-2.5 text-sm font-semibold text-slate-700 transition-colors hover:bg-slate-200 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700"
              >
                Cancelar
              </a>
              <button
                class="inline-flex min-w-[84px] items-center justify-center rounded-lg bg-primary px-6 py-2.5 text-sm font-semibold text-white transition-colors hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:ring-offset-2 dark:focus:ring-offset-background-dark shadow-md"
                type="submit"
              >
                Guardar Cambios
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>

    <script>
      // Inicializamos con la cantidad actual
      let preguntaIndex = <%= actividad.preguntas.length %>;

      function agregarPregunta() {
        const container = document.getElementById('preguntas-container');
        const nuevoIndex = preguntaIndex++;
        
        const template = `
          <div class="pregunta-bloque border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50 rounded-lg p-4 relative mt-4" data-index="${nuevoIndex}">
            <button type="button" onclick="eliminarPregunta(this)" class="absolute top-3 right-3 text-slate-400 hover:text-red-500 transition-colors">
              <span class="material-symbols-outlined">delete</span>
            </button>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div class="md:col-span-3">
                <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="preguntas[${nuevoIndex}][preguntaTexto]">Texto de la Pregunta ${nuevoIndex + 1}</label>
                <input class="w-full bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary" name="preguntas[${nuevoIndex}][preguntaTexto]" type="text" required/>
              </div>
              <div class="md:col-span-1">
                <label class="block text-sm font-medium text-slate-600 dark:text-slate-300 mb-1" for="preguntas[${nuevoIndex}][puntaje]">Puntaje</label>
                <input class="w-full bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg focus:ring-primary focus:border-primary" name="preguntas[${nuevoIndex}][puntaje]" type="number" value="10" min="1" required/>
              </div>
            </div>
            <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Alternativas:</p>
            <div class="alternativas-container space-y-2" data-pregunta-index="${nuevoIndex}">
              <div class="alternativa-item flex items-center gap-3">
                <input type="radio" name="preguntas[${nuevoIndex}][correcta]" value="0" class="w-4 h-4 text-primary bg-slate-100 border-slate-300 focus:ring-primary dark:bg-slate-700 dark:border-slate-600" required>
                <input type="text" name="preguntas[${nuevoIndex}][alternativas][0][texto]" placeholder="Escribe una alternativa..." class="flex-grow bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg text-sm focus:ring-primary focus:border-primary py-2 px-3">
                 <button type="button" onclick="eliminarAlternativa(this)" class="text-slate-400 hover:text-red-500 transition-colors">
                    <span class="material-symbols-outlined text-lg">remove_circle_outline</span>
                 </button>
              </div>
            </div>
            <button type="button" onclick="agregarAlternativa(this)" class="mt-3 inline-flex items-center gap-1 text-sm text-primary hover:text-blue-600 font-medium transition-colors">
              <span class="material-symbols-outlined text-lg">add</span>
              Añadir Alternativa
            </button>
          </div>`;
        container.insertAdjacentHTML('beforeend', template);
      }

      function eliminarPregunta(button) {
        const bloque = button.closest('.pregunta-bloque');
        if (bloque) {
          bloque.remove();
        }
      }

      function agregarAlternativa(button) {
        const container = button.previousElementSibling;
        const preguntaIndex = container.dataset.preguntaIndex;
        const alternativaIndex = container.children.length;
        
        const template = `
          <div class="alternativa-item flex items-center gap-3">
            <input type="radio" name="preguntas[${preguntaIndex}][correcta]" value="${alternativaIndex}" class="w-4 h-4 text-primary bg-slate-100 border-slate-300 focus:ring-primary dark:bg-slate-700 dark:border-slate-600">
            <input type="text" name="preguntas[${preguntaIndex}][alternativas][${alternativaIndex}][texto]" placeholder="Texto alternativa" class="flex-grow bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700 rounded-lg text-sm focus:ring-primary focus:border-primary py-2 px-3">
            <button type="button" onclick="eliminarAlternativa(this)" class="text-slate-400 hover:text-red-500 transition-colors">
               <span class="material-symbols-outlined text-lg">remove_circle_outline</span>
            </button>
          </div>`;
        container.insertAdjacentHTML('beforeend', template);
      }

      function eliminarAlternativa(button) {
         const item = button.closest('.alternativa-item');
         const container = item.parentElement;
         if (container.children.length > 1) {
            item.remove();
            // Reajuste de valores para que el backend reciba bien los arrays
            const radios = container.querySelectorAll('input[type="radio"]');
            radios.forEach((radio, index) => {
                radio.value = index;
            });
             const inputs = container.querySelectorAll('input[type="text"]');
             const preguntaIndex = container.dataset.preguntaIndex;
             inputs.forEach((input, index) => {
                 input.name = `preguntas[${preguntaIndex}][alternativas][${index}][texto]`;
             });
         } else {
             alert("Cada pregunta debe tener al menos una alternativa.");
         }
      }
    </script>
  </body>
</html>