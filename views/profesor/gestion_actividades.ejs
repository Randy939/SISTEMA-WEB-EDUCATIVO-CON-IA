<!DOCTYPE html>
<html class="light" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Gestión de Actividades</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#4396ea",
              "background-light": "#f6f7f8",
              "background-dark": "#111921",
            },
            fontFamily: {
              display: ["Inter", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.25rem",
              lg: "0.5rem",
              xl: "0.75rem",
              full: "9999px",
            },
          },
        },
      };
    </script>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body
    class="bg-background-light dark:bg-background-dark font-display text-[#0e141b] dark:text-slate-200 h-screen overflow-hidden"
  >
    <div class="flex h-full w-full">
      <%- include('../partials/siderbar_profesor', { active: active, user: user
      }) %>

      <main class="flex-1 p-8 h-full overflow-y-auto">
        <div class="max-w-7xl mx-auto">
          <header
            class="mb-8 flex flex-col sm:flex-row sm:justify-between sm:items-end gap-4"
          >
            <div>
              <h1
                class="text-slate-900 dark:text-white text-3xl md:text-4xl font-black leading-tight tracking-tight"
              >
                Gestión de Actividades
              </h1>
              <p class="mt-2 text-slate-500 dark:text-slate-400 text-lg">
                Administra tus lecturas y preguntas de comprensión.
              </p>
            </div>
            <a
              href="/profesor/actividades/crear"
              class="inline-flex items-center justify-center gap-2 bg-primary text-white font-semibold py-2.5 px-6 rounded-xl hover:bg-blue-600 transition-colors shadow-sm hover:shadow-md active:scale-95"
            >
              <span class="material-symbols-outlined text-xl">add_circle</span>
              <span>Nueva Actividad</span>
            </a>
          </header>
          <div class="space-y-8">
            <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm">
              <h2
                class="text-xl font-semibold mb-6 text-slate-800 dark:text-slate-100"
              >
                Mis Actividades Creadas (<%= actividades.length %>)
              </h2>
              <div class="overflow-x-auto">
                <table class="w-full text-sm text-left">
                  <thead
                    class="text-xs text-slate-500 dark:text-slate-400 uppercase border-b border-slate-200 dark:border-slate-700"
                  >
                    <tr>
                      <th class="py-3 px-4 w-2/5" scope="col">Título</th>
                      <th class="py-3 px-4" scope="col">Tema</th>
                      <th class="py-3 px-4" scope="col">Dificultad</th>
                      <th class="py-3 px-4" scope="col">Preguntas</th>
                      <th class="py-3 px-4 text-right" scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody
                    class="divide-y divide-slate-200 dark:divide-slate-700"
                  >
                    <% if (actividades.length === 0) { %>
                    <tr class="bg-white dark:bg-slate-900">
                      <td
                        colspan="5"
                        class="px-6 py-12 text-center text-slate-500 dark:text-slate-400"
                      >
                        <div class="flex flex-col items-center gap-2">
                          <span
                            class="material-symbols-outlined text-4xl text-slate-300"
                            >library_books</span
                          >
                          <p>No has creado ninguna actividad todavía.</p>
                        </div>
                      </td>
                    </tr>
                    <% } %>
                    <% actividades.forEach(actividad => { %>
                    <tr
                      class="bg-white dark:bg-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors"
                    >
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-4">
                          <div class="relative flex-shrink-0 w-12 h-12">
                            <img
                              src="<%= actividad.imagenUrl %>"
                              alt="Portada"
                              class="w-full h-full rounded-lg object-cover shadow-sm border border-slate-100 dark:border-slate-700"
                            />
                          </div>
                          <div>
                            <p
                              class="font-bold text-slate-900 dark:text-white text-base line-clamp-1"
                            >
                              <%= actividad.titulo %>
                            </p>
                            <p
                              class="text-xs text-slate-500 dark:text-slate-400 line-clamp-1"
                            >
                              <%= actividad.descripcion.substring(0, 40) %>...
                            </p>
                          </div>
                        </div>
                      </td>
                      <td class="px-6 py-4">
                        <span
                          class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300"
                        >
                          <%= actividad.tema %>
                        </span>
                      </td>
                      <td class="px-6 py-4"><%= actividad.dificultad %></td>
                      <td class="px-6 py-4 text-center">
                        <span
                          class="text-slate-600 dark:text-slate-300 font-medium"
                        >
                          <%= actividad.preguntas.length %>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-right">
                        <div class="flex justify-end items-center gap-2">
                          <a
                            href="/profesor/actividades/editar/<%= actividad._id %>"
                            class="p-2 text-slate-600 dark:text-slate-300 hover:bg-blue-100 dark:hover:bg-blue-900/40 hover:text-primary dark:hover:text-blue-300 rounded-md transition-colors"
                            title="Editar"
                          >
                            <span class="material-symbols-outlined">edit</span>
                          </a>
                          <form
                            action="/profesor/actividades/eliminar"
                            method="POST"
                            class="form-eliminar"
                          >
                            <input
                              type="hidden"
                              name="actividadId"
                              value="<%= actividad._id %>"
                            />
                            <button
                              type="submit"
                              class="p-2 text-slate-500 hover:text-red-600 hover:bg-red-50 dark:text-slate-400 dark:hover:text-red-400 dark:hover:bg-red-900/20 rounded-lg transition-colors"
                              title="Eliminar Actividad"
                            >
                              <span class="material-symbols-outlined text-xl"
                                >delete</span
                              >
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const deleteForms = document.querySelectorAll(".form-eliminar");

        deleteForms.forEach((form) => {
          form.addEventListener("submit", (e) => {
            const confirmacion = confirm(
              "¿Estás seguro de eliminar esta actividad? Se borrará todo el progreso de los estudiantes asociado a ella.",
            );

            if (!confirmacion) {
              e.preventDefault(); // Cancela el envío si dice que NO
            }
          });
        });
      });
    </script>
  </body>
</html>
